<div class=container>
    <div class="row">
      <div class="col-md-12">
        <img src="/assets/img/burger.jpg" alt="Burger" height="300px">
        <h1>Eat-Da-Burger</h1>
      </div>
    </div>
  
    <div class="row">
      <div class="col-md-6" id="selectBurg">
        <h3>Select burger to devour!</h3>

          {{#each burgers}}
            {{#unless this.devoured}}
                <div class="burgerMenu">
                  <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                    {{this.burger_name}}
                    <button id="devour">Devour It!</button>
                  </form> 
                </div>

            {{/unless}}
          {{/each}}
        
      </div>


      <div class="col-md-6">
        <h3>Devoured</h3>
       
          {{#each burgers}}
            {{#if this.devoured}}              
              <div>
                <form action="/burgers/{{this.id}}?_method=DELETE" method="POST">
                  <button type="submit">{{this.burger_name}}</button>
                </form>
              </div>  
            {{/if}}
          {{/each}}
        
      </div>
    </div>

<div></div>

  <div class="row">
    <div class="col-md-12">
      <h3><strong>Order an awesome burger!</strong></h3>
      <form action="/burgers" method="POST">
        <input type="text" id="burg" name="burger_name" placeholder="Create Delicious Burger">
        <button id="addBurger" type="submit">Order Burger!</button>
      </form>
    </div> 
  </div>
</div>